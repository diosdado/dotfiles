

# -------------------------------------------------------------------------------------------------
# MEH
# -------------------------------------------------------------------------------------------------


# resize window
meh - n : ~/.scripts/yabai/resize-window.sh -h
meh - m : ~/.scripts/yabai/resize-window.sh -l

# focus window
meh - h : yabai -m window --focus west
meh - j : yabai -m window --swap west
meh - k : yabai -m window --swap east
meh - l : yabai -m window --focus east

# move to display
meh - y : ~/.scripts/yabai/send-to-display.sh -d west
meh - u : ~/.scripts/yabai/send-to-display.sh -d south
meh - i : ~/.scripts/yabai/send-to-display.sh -d north
meh - o : ~/.scripts/yabai/send-to-display.sh -d east

meh - 0x29 : yabai -m window --toggle zoom-fullscreen # fullscreen
meh - 0x27 : yabai -m window --toggle float --grid 7:5:1:1:3:5 # float window
meh - 0x2A : ~/.scripts/yabai/set-layout.sh -l default # reset layout
meh - r : yabai -m space --rotate 270  # rotate layout
meh - v : yabai -m window --toggle split # horizontal/vertical
meh - p : ~/.scripts/yabai/toggle-custom-opacity-on-focus.sh # toggle opacity
meh - r : yabai --restart-service # restart yabai
meh - x : ~/.scripts/yabai/reset-borders.sh # restart borders
meh - b : yabai -m space --balance # balance
meh - a : ~/.scripts/yabai/toggle-layout.sh # toggle layout
meh - return : yabai -m window --swap first ; yabai -m space --balance ; yabai -m window first --resize right:400:0 # set primary window


