yabai -m rule --add title="Picture in Picture"      manage=off
yabai -m rule --add app="^OBS Studio$"              manage=off
yabai -m rule --add app="^iPhone Mirroring$"        manage=off

# sticky windows
yabai -m rule --add app="^VLC$"                     sticky=on
yabai -m rule --add app="^QuickTime Player$"        sticky=on
yabai -m rule --add app="^Boom\ 3D$"                sticky=on
# yabai -m rule --add app="^Calendar$"                sticky=on
yabai -m rule --add app="^Transmission$"            sticky=on
yabai -m rule --add app="^Karabiner-Elements$"      sticky=on
yabai -m rule --add app="^Karabiner-EventViewer$"   sticky=on
yabai -m rule --add app="^MAMP PRO$"                sticky=on
yabai -m rule --add app="^Stickies$"                sub-layer=above sticky=on




# dynamic space rules based on personal configuration file
~/.scripts/yabai/set-rules.sh


yabai -m rule --add app="^Ghostty$"                 scratchpad=ghostty      grid=11:11:3:3:5:5
