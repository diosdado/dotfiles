(defchordsv2
    (7 8 9) (cmd sudo -u david.diosdado open -a "Finder") $chord-time first-release () ;; homerow search

    (8 9 0) S-M-/ $chord-time first-release () ;; homerow search
    (7 8 9 0) S-M-j $chord-time first-release () ;; homerow scroll

    (u i o p) @yfloa $chord-time first-release () ;; float window
    (j k l ;) @yfull $chord-time first-release () ;; maximize

    (u i o) @ymovh $chord-time first-release () ;; move left
    (i o p) @ymovl $chord-time first-release () ;; move right

    (j k l) @yfoch $chord-time first-release () ;; select left
    (k l ;) @yfocl $chord-time first-release () ;; select right

    (m , .) @ysizh $chord-time first-release () ;; smaller primary
    (, . /) @ysizl $chord-time first-release () ;; bigger primary

    (h j k) @yrest $chord-time first-release () ;; reset yabai
    (n m ,) @ylayd $chord-time first-release () ;; re-apply yabai rules

    (2 3 4) (cmd sudo -u david.diosdado bash -c "/Users/david.diosdado/.scripts/yabai/goto-apps.sh -a design") $chord-time first-release ()

)
