{
    "description": "Diosdado - HyperLayer Yabai",
    "manipulators": [


{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "equal_sign" },
    "to": [{ "shell_command": "~/.scripts/yabai/reset-borders.sh # restart borders" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "1" },
    "to": [{ "shell_command": "~/.scripts/yabai/toggle-layout.sh # toggle layout" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "6" },
    "to": [{ "shell_command": "/opt/homebrew/bin/yabai -m window --focus west" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "7" },
    "to": [{ "shell_command": "/opt/homebrew/bin/yabai -m window --swap west" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "8" },
    "to": [{ "shell_command": "/opt/homebrew/bin/yabai -m window --swap east" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "9" },
    "to": [{ "shell_command": "/opt/homebrew/bin/yabai -m window --focus east" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "0" },
    "to": [{ "shell_command": "~/.scripts/yabai/set-layout.sh -l default # reset layout" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "hyphen" },
    "to": [{ "shell_command": "/opt/homebrew/bin/yabai --restart-service # restart yabai" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "spacebar" },
    "to": [{ "shell_command": "~/.scripts/yabai/toggle-custom-opacity-on-focus.sh # toggle opacity" }]
},
{
    "conditions": [ { "name": "hyper_layer", "type": "variable_if", "value": 1 } ], "type": "basic",
    "from": { "key_code": "return_or_enter" },
    "to": [{ "shell_command": "/opt/homebrew/bin/yabai -m window --toggle float --grid 7:5:1:1:3:5 # float window" }]
}

    ]
}
























