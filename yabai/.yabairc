yabai -m rule --add app="^zoom.us$"                 space=s_conference

yabai -m rule --add app="^Gmail$"                   space=s_email
yabai -m rule --add app="^Mail$"                    space=s_email

yabai -m rule --add app="^WhatsApp$"                space=s_messages
yabai -m rule --add app="â€ŽWhatsApp"            space=s_messages
yabai -m rule --add app="^Instagram$"               space=s_messages
yabai -m rule --add app="^iPhone Mirroring$"        space=s_messages


yabai -m space s_secondary      --layout bsp
yabai -m space s_messages       --layout bsp
yabai -m space s_email          --layout bsp
yabai -m space s_third          --layout bsp
yabai -m space s_reminders      --layout bsp
yabai -m space s_primary        --layout bsp
yabai -m space s_development    --layout bsp
yabai -m space s_entertainment  --layout stack
yabai -m space s_conference     --layout stack


# change opacity of specific apps when focused
yabai -m signal --add event=window_focused \
    label='custom-opacity-on-focus' \
    action='~/.scripts/yabai/custom-opacity-on-focus.sh'

# force layout of specific apps when changing focus
yabai -m signal --add event=window_focused \
    label='custom-layout-on-focus' \
    action='~/.scripts/yabai/custom-layout-on-focus.sh'

sleep .5

~/.scripts/yabai/custom-opacity-on-focus.sh
~/.scripts/yabai/custom-layout-on-focus.sh

terminal-notifier -message "Service (re)started" -title "Yabai"

# sleep 1

yabai -m rule --apply

~/.scripts/yabai/reset-borders.sh
~/.scripts/yabai/reset-mouse-focus.sh
