
# yabai spaces
# 1 - s_main
# 2 - s_design
# 3 - s_tasks
# 4 - s_email
# 5 - s_texting
# 6 - s_development
# 7 - s_settings
# 8 - s_media
# 9 - s_games



# Restart Yabai
shift + alt - z : yabai --restart-service

# Zoom
shift + alt - e : yabai -m window --toggle zoom-parent
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# Make primary window
shift + alt - return : yabai -m window --swap first ; yabai -m space --balance ; yabai -m window first --resize right:460:0

shift + alt - o : yabai -m config window_opacity on
ctrl + shift + alt - o : yabai -m config window_opacity off

# Toggle modes
shift + alt - s : yabai -m space --layout bsp
shift + alt - a : yabai -m space --layout stack
shift + alt - d : yabai -m space --layout float

# Balance
shift + alt - 0 : yabai -m space --balance

# Float / unfloat window and center on screen
shift + alt - t : yabai -m window --toggle float --grid 7:5:1:1:3:5

# Rotate layout
shift + alt - c : yabai -m space --rotate 270

# Toggle horizontal+vertical
shift + alt - v : yabai -m window --toggle split

# Focus windows
shift + alt - j : yabai -m window --focus south
shift + alt - k : yabai -m window --focus north
shift + alt - h : yabai -m window --focus west
shift + alt - l : yabai -m window --focus east

# focus monitor
shift + alt - u  : yabai -m display --focus prev
shift + alt - i  : yabai -m display --focus next

# Resize
shift + alt - 8 : yabai -m window --resize right:-40:0
shift + alt - 9 : yabai -m window --resize right:40:0

# Flash current window
shift + alt - space : yabai -m window --opacity 0.1 && sleep $(yabai -m config window_opacity_duration) && yabai -m window --opacity 0.0

# Warp windows
shift + ctrl + alt - j : yabai -m window --warp south
shift + ctrl + alt - k : yabai -m window --warp north
shift + ctrl + alt - h : yabai -m window --warp west
shift + ctrl + alt - l : yabai -m window --warp east

# Swap windows
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - l : yabai -m window --swap east

# send window to desktop and follow focus
shift + cmd - 1 : yabai -m window --space  1; yabai -m space --focus 1
shift + cmd - 2 : yabai -m window --space  2; yabai -m space --focus 2
shift + cmd - 3 : yabai -m window --space  3; yabai -m space --focus 3

# send window to monitor and follow focus
ctrl + alt - u : yabai -m window --display prev; yabai -m display --focus prev
ctrl + alt - i : yabai -m window --display next; yabai -m display --focus next

# resize
shift + cmd - h : yabai -m window --resize right:-200:0
shift + cmd - l : yabai -m window --resize right:200:0



